{
  "name": "Capstone Clipper",
  "description": "Send the contents of the active to Capstone.",
  "version": "1.0",
  "permissions": ["activeTab", "contextMenus", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Clip to Capstone",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
