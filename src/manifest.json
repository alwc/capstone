{
  "manifest_version": 2,
  "name": "Capstone",
  "version": "3.1",
  "permissions": [
    "background",
    "clipboardRead",
    "clipboardWrite",
    "webview",
    "system.network",
    "storage",
    "fileSystem",
    "unlimitedStorage"
  ],
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "sockets": {
    "tcp": { "connect": ["*"] },
    "udp": {
      "send": "*",
      "bind": ["*"],
      "multicastMembership": ""
    },
    "tcpServer": { "listen": ["*"] },
    "udpServer": { "listen": ["*"] }
  }
}
